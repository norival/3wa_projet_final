{{ form_start(form) }}
<fieldset>
    <h3>Informations</h3>
    <ul>
        <li>{{ form_row(form.name) }}</li>
        <li>{{ form_row(form.title) }}</li>
    </ul>
</fieldset>
<fieldset>
    <h3>Content types</h3>
    <ul id="contentTypeList">
        {% for contentType in form.content_type %}
            <li>
                {{ form_row(contentType) }} <button></button>
            </li>
        {% endfor %}
    </ul>
    <ul>
        <li><button id="addContentType">Add content type</button></li>
    </ul>
</fieldset>
<ul>
    <li><button id="submitButton">Save</button></li>
    <li><button id="cancelButton">Cancel</button></li>
</ul>
{{ form_end(form, { 'render_rest': false }) }}
